{
  "name": "@tsykhovskyi/lua-debugger",
  "version": "0.0.1",
  "description": "",
  "main": "./dist/lua-debugger.js",
  "bin": {
    "lua-debugger": "./dist/lua-debugger.js"
  },
  "scripts": {
    "dev": "nodemon src/lua-debugger.ts",
    "dev:proxy": "nodemon src/lua-debugger.ts -- proxy -t 29998:30001",
    "dev:proxy-disabled": "nodemon src/lua-debugger.ts -- proxy -t 29998:30001 --disable",
    "dev:eval": "nodemon src/lua-debugger.ts --  -P 30001 eval ./samples/script.lua key1 key2 , veni vidi vici",
    "build:client": "cd client && npm run build-only",
    "test": "nodemon src/test.ts",
    "build": "npx tsc -p .",
    "prepack": "npm run build && npm run build:client"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "^17.0.42",
    "@types/ws": "^8.5.3",
    "@types/yargs": "^17.0.13",
    "nodemon": "^2.0.19",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@fastify/static": "^6.5.0",
    "@fastify/websocket": "^6.0.1",
    "fastify": "^4.5.3",
    "string-argv": "^0.3.1",
    "yargs": "^17.6.2"
  }
}
